{
  "name": "nextjs-skeleton",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "check-all-staged": "git diff --exit-code > /dev/null || (echo 'Please stage all changes before attempting to commit.' 1>&2 && exit 1)",
    "dev": "next dev",
    "lint": "next lint",
    "lint-staged": "lint-staged",
    "start": "next start",
    "tidy-all": "prettier --ignore-path .gitignore --write .",
    "type-check": "tsc --noEmit",
    "update-env": "vercel env pull .env.local"
  },
  "pre-commit": [
    "check-all-staged",
    "lint-staged"
  ],
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --ignore-path .gitignore --write",
      "eslint",
      "tsc-files --noEmit next-env.d.ts src/types/environment.d.ts"
    ],
    "*.{js,jsx}": [
      "prettier --ignore-path .gitignore --write",
      "eslint"
    ],
    "*.{css,md,html,json}": [
      "prettier --ignore-path .gitignore --write"
    ]
  },
  "dependencies": {
    "next": "^13.4.1",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/react": "^18.2.6",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.40.0",
    "eslint-config-next": "^13.4.1",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "lint-staged": "^13.2.2",
    "postcss": "^8.4.23",
    "pre-commit": "^1.2.2",
    "prettier": "^2.8.8",
    "prettier-plugin-packagejson": "^2.4.3",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "pretty-quick": "^3.1.3",
    "tailwindcss": "^3.3.2",
    "typescript": "^4.9.5",
    "vercel": "^28.20.0"
  },
  "engines": {
    "node": "^18.12.0",
    "npm": "^8.19.2"
  }
}
