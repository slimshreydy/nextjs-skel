{
  "name": "nextjs-skeleton",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "check-all-staged": "git diff --exit-code > /dev/null || (echo 'Please stage all changes before attempting to commit.' 1>&2 && exit 1)",
    "dev": "next dev",
    "lint": "next lint",
    "lint-staged": "lint-staged",
    "start": "next start",
    "tidy-all": "prettier --ignore-path .gitignore --write .",
    "type-check": "tsc --noEmit",
    "update-env": "vercel env pull .env.local"
  },
  "pre-commit": [
    "check-all-staged",
    "lint-staged"
  ],
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --ignore-path .gitignore --write",
      "eslint",
      "tsc-files --noEmit src/types/environment.d.ts"
    ],
    "*.{js,jsx}": [
      "prettier --ignore-path .gitignore --write",
      "eslint"
    ],
    "*.{css,md,html,json}": [
      "prettier --ignore-path .gitignore --write"
    ]
  },
  "dependencies": {
    "clsx": "^2.1.0",
    "next": "^14.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.1"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/react": "^18.2.66",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "autoprefixer": "^10.4.18",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.1.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "lint-staged": "^15.2.2",
    "next": "^14.1.3",
    "postcss": "^8.4.35",
    "pre-commit": "^1.2.2",
    "prettier": "^3.2.5",
    "prettier-plugin-packagejson": "^2.4.12",
    "prettier-plugin-tailwindcss": "^0.5.12",
    "pretty-quick": "^4.0.0",
    "react": "^18.2.0",
    "tailwindcss": "^3.4.1",
    "tsc-files": "^1.1.4",
    "typescript": "^5.4.2",
    "vercel": "^33.6.0"
  },
  "engines": {
    "node": "^20.11.0",
    "npm": "^10.2.4"
  }
}
